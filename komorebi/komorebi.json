{
	"$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.25/schema.json",
	"app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
	"window_hiding_behaviour": "Cloak",
	"cross_monitor_move_behaviour": "Insert",
	"default_workspace_padding": 20,
	"default_container_padding": 6,
	"border": true,
	"border_width": 3,
	"border_offset": -1,
	"border_style": "System",
	"border_colours": {
		"single": "#42a5f5",
		"stack": "#00a542",
		"monocle": "#ff3399",
		"unfocused": "#808080"
	},
	"mouse_follows_focus": false,
	"stackbar": {
		"height": 0,
		"mode": "OnStack",
		"tabs": {
			"width": 0,
			"focused_text": "#00a542",
			"unfocused_text": "#b3b3b3",
			"background": "#141414"
		}
	},
	"monitors": [
		{
			"workspaces": [
				{
					"name": "I",
					"layout": "Grid",
					"initial_workspace_rules": [
						{
							"kind": "Exe",
							"id": "devenv.exe"
						},
						{
							"kind": "Exe",
							"id": "wezterm-gui.exe"
						},
						{
							"kind": "Exe",
							"id": "Ssms.exe"
						},
						{
							"kind": "Exe",
							"id": "Postman.exe"
						},
						{
							"kind": "Exe",
							"id": "Firefox.exe"
						},
					]
				},
				{
					"name": "II",
					"layout": "Grid",
					"initial_workspace_rules": [
						{
							"kind": "Exe",
							"id": "olk.exe"
						},
						{
							"kind": "Exe",
							"id": "OUTLOOK.exe"
						}
					]
				},
				{
					"name": "III",
					"layout": "Grid",
					"initial_workspace_rules": [
						{
							"kind": "Exe",
							"id": "ms-teams.exe"
						}
					]
				},
				{
					"name": "IV",
					"layout": "Grid",
					"initial_workspace_rules": [
						{
							"kind": "Exe",
							"id": "msedge.exe"
						},
						{
							"kind": "Exe",
							"id": "zen.exe"
						}
					]
				},
				{
					"name": "V",
					"layout": "Grid",
					"initial_workspace_rules": [
						{
							"kind": "Exe",
							"id": "Discord.exe"
						},
						{
							"kind": "Exe",
							"id": "Spotify.exe"
						}
						
					]
				}
			]
		}
	],
	"float_rules": [
		{
			"kind": "Title",
			"id": "WindowsFormsParkingWindow",
			"matching_strategy": "Equals"
		},
		{
			"kind": "Exe",
			"id": "ServiceHub.ThreadedWaitDialog.exe",
			"matching_strategy": "Equals"
		},
		{
			"kind": "Exe",
			"id": "logioptionsplus.exe",
			"matching_strategy": "Equals"
		}
	]
}
